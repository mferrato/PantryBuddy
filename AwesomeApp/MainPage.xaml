        <ImageButton Grid.Row="1" Grid.Column="0" Source="https://i.postimg.cc/66f5Hsdt/imagebutton.png" Clicked="Navigate_To_Inventory"></ImageButton>
        <ImageButton Grid.Row="1" Grid.Column="1" Source="https://i.postimg.cc/phCz6Tbq/Untitled-1.png" Clicked="Navigate_To_AddItem"></ImageButton>
        <ImageButton Grid.Row="2" Grid.Column="0" Source="https://i.postimg.cc/xkKKL5sr/recipes.png" Clicked="Navigate_To_Recipes"></ImageButton>
        <ImageButton Grid.Row="2" Grid.Column="1" Source="https://i.postimg.cc/CBSb78tR/settings.png"></ImageButton>

